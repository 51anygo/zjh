/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.user-motto {
  margin-top: 100rpx;
  width: 350rpx;
}
.game-desc{
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
  margin-top: 50rpx;
  color: #999;
}
.game-desc text{
  margin-bottom: 10rpx;
  font-size: 28rpx
}
.game-desc text:first-child{
  color: #333;
  margin-bottom: 20rpx;
  font-size: 30rpx
}
.game-desc label{
  color: #333;
  margin-top: 20rpx;
}